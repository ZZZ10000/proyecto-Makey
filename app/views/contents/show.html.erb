<h1><%= @content.title %></h1>
<p><%= @content.description %></p>

<% if @content.video.attached? %>
  <video width="600" controls>
    <source src="<%= url_for(@content.video) %>" type="<%= @content.video.content_type %>">
    Your browser does not support the video tag.
  </video>
<% end %>

<%= link_to "Edit", edit_content_path(@content), class: "btn btn-warning" %>
<%= link_to "Back", contents_path, class: "btn btn-secondary" %>

