<h1 class="text-center mb-4">Lista de Contenidos</h1>

<!-- Botón para agregar nuevo contenido (solo visible para admin) -->
<% if current_user.admin? %>
  <div class="text-end mb-3">
    <%= link_to "Agregar Nuevo Contenido", new_content_path, class: "btn btn-primary" %>
  </div>
<% end %>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @contents.each do |content| %>
    <div class="col">
      <div class="card h-100">
        <!-- Imagen del contenido -->
        <% if content.image.attached? %>
          <%= image_tag content.image, class: "card-img-top", alt: content.title, style: "height: 200px; object-fit: cover;" %>
        <% else %>
          <%= image_tag "default-avatar.jpg", class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
        <% end %>

        <div class="card-body">
          <h5 class="card-title"><%= content.title %></h5>
          <p class="card-text"><%= content.description %></p>
        </div>

        <div class="card-footer d-flex justify-content-between">
          <!-- Enlaces de edición y eliminación (solo admin) -->
          <% if current_user.admin? %>
            <%= link_to "Editar", edit_content_path(content), class: "btn btn-warning" %>
            <%= button_to "Eliminar", content, method: :delete, data: { confirm: "¿Seguro que deseas eliminar este contenido?" }, class: "btn btn-danger" %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>


