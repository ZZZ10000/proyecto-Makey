<h1>Crear Nuevo Contenido</h1>

<%= form_with(model: @content, local: true, html: { multipart: true }) do |f| %>
  <div class="mb-3">
    <%= f.label :title, "Título", class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :description, "Descripción", class: "form-label" %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :image, "Imagen", class: "form-label" %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :video, "Video", class: "form-label" %>
    <%= f.file_field :video, class: "form-control" %>
  </div>

  <div class="text-center">
    <%= f.submit "Crear Contenido", class: "btn btn-success" %>
  </div>
<% end %>

